CREATE TABLE msg (id INT NOT NULL AUTO_INCREMENT,
dt DATETIME NOT NULL DEFAULT NOW(),
msg VARCHAR(255),
delete DATETIME DEFAULT '01-01-2000 00:00:00',
to INT(16),
from INT(16),
PRIMARY KEY(id));


